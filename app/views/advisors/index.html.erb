<p id="notice"><%= notice %></p>

<h1>Booking Appointments (Advisor Availability)</h1>

<%=  month_calendar events: @calendar_advisors do |day, advisors| %>
  <div><strong><%= day.strftime("%e") %></strong></div>
    <% advisors.each do |advisor| %>
     <% puts advisor.inspect %>
      <div>
        <% if day >= Date.today %>
        <%= link_to advisor.name, advisor_path(advisor.id, time: advisor.start_time) %>
        <%#= advisor.start_time.strftime("%I:%M%p")%>
        <%#= advisor.end_time.strftime("%I:%M%p")%>
        <% else %>
        <% end %>
      </div>
    <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>Start time</th>
      <th>End date</th>
      <th>End time</th>
      <th>Recurring</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advisors.each do |advisor| %>
      <tr>
        <td><%= advisor.name %></td>
        <td><%= advisor.start_time.strftime("%d/%m/%Y") %></td>
        <td><%= advisor.start_time.strftime("%I:%M%p") %></td>
        <td><%= advisor.end_time.strftime("%d/%m/%Y") %></td>
        <td><%= advisor.end_time.strftime("%I:%M%p")%></td>
        <td><%= advisor.recurring %></td>
        <td><%= link_to 'Show', advisor %></td>
        <td><%= link_to 'Edit', edit_advisor_path(advisor) %></td>
        <td><%= link_to 'Destroy', advisor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

