
<p id="notice"><%= notice %></p>

<h1>Booking</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>Start time</th>
      <th>End date</th>
      <th>End time</th>
      <th>Recurring</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advisors.each do |advisor| %>
      <tr>
        <td><%= advisor.name %></td>
        <td><%= advisor.start_time %></td>
        <!-- .strftime("%d/%m/%Y") -->
        <td><%= advisor.start_time.strftime("%I:%M%p") %></td>
        <td><%= advisor.end_time.strftime("%d/%m/%Y") %></td>
        <td><%= advisor.end_time.strftime("%I:%M%p")%></td>
        <td><%= advisor.recurring %></td>
        <td><%= link_to 'Book Here',new_advisor_booking_path(advisor.id) %>
        <td><%#= link_to 'Destroy', advisor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
